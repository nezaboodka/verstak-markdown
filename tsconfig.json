{
  "compilerOptions": {
    // General
    "pretty": true,
    "listFiles": true,
    "inlineSources": false,
    "removeComments": false, // keep comments to make tests coverage working
    // Targets & outputs
    "target": "ES2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "dom"],
    "noEmit": false,
    "noLib": false,
    "baseUrl": "source",
    "isolatedModules": true,
    "esModuleInterop": true,
    // "rootDir": "source",
    "outDir": "build/dist",
    "declarationDir": "build/dist",
    "declaration": true,
    // Debugging
    "sourceMap": true,
    "inlineSourceMap": false,
    // Strictness
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    // Other
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "verstak": [
        "library/verstak/source/api.ts"
      ],
    },
  },
  "include": [
    "source/**/*.ts",
    "test/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
